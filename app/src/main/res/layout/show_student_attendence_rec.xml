            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/std_profile_image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/profileicon"
                android:visibility="gone"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Ahmed"
                android:textColor="#01579B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_roll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:text="Roll No.165"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/student_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_roll_number"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:text="First Semester"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/student_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_semester"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:text="Class: A"
                android:textSize="15sp" />


            <RadioButton
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/student_roll_number"
                android:layout_alignBottom="@+id/student_roll_number"
                android:buttonTint="@color/radio_btn_color"
                android:checked="true"
                android:text="Present" />

            <RadioButton
                android:id="@+id/absent"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/student_roll_number"
                android:layout_toEndOf="@+id/present"
                android:buttonTint="@color/radio_btn_color"
                android:text="Absent" />

            <RadioButton
                android:id="@+id/late"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/student_roll_number"
                android:layout_toEndOf="@+id/absent"
                android:buttonTint="@color/radio_btn_color"
                android:text="Late" />


