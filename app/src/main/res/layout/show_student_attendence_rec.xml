<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/std_profile_image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/profileicon"
                app:civ_border_width="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:textColor="#01579B"
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ahmed"
                android:layout_marginLeft="105dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_roll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="Roll No.165"
                android:textSize="17sp"
                android:layout_below="@id/student_name" />

            <TextView
                android:id="@+id/student_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Semester"
                android:textSize="15sp"
                android:layout_below="@id/student_roll_number"
                android:layout_marginLeft="105dp"/>

            <TextView
                android:id="@+id/student_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: A"
                android:textSize="15sp"
                android:layout_marginLeft="105dp"
                android:layout_below="@id/student_semester"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attendence_radio"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="100dp"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:buttonTint="@color/radio_btn_color"
                    android:id="@+id/present_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attendence_radio2"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="48dp"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:buttonTint="@color/radio_btn_color"
                    android:id="@+id/absent_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attendence_radio4"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:buttonTint="@color/radio_btn_color"
                    android:id="@+id/late_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Late"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>