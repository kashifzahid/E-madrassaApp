                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text=" Isha"
                android:textColor="#01579B"
                android:textSize="18dp" />
            <HorizontalScrollView
                android:id="@+id/horizone_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RadioGroup

                        android:id="@+id/radioGroupisha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/isha_bajamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/radio_btn_color"

                            android:text="Ba jamat" />

                        <RadioButton
                            android:id="@+id/isha_individual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:buttonTint="@color/radio_btn_color"

                            android:text="Individual" />

                        <RadioButton
                            android:id="@+id/isha_qaza"
                            android:buttonTint="@color/radio_btn_color"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Qaza" />

                        <RadioButton
                            android:id="@+id/isha_notoffered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Not Offered"
                            android:buttonTint="@color/radio_btn_color"
                            />

                    </RadioGroup>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"

                    android:text="Overall Grade:"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/spin_design">

                    <Spinner
                        android:layout_width="70dp"
                        android:layout_height="match_parent"></Spinner>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="Today's Performance"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:id="@+id/horizone_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="19dp"
                            android:text="Overall Grade:"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/spin_design">

                            <Spinner
                                android:layout_width="70dp"
                                android:layout_height="match_parent"></Spinner>

                        </RelativeLayout>

                        <RatingBar
                            android:id="@+id/ruleRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="170dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="#FFEE58"
                            android:rating="5"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:stepSize="0.2" />
                    </RelativeLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:text="Teacher's Remarks"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/remarks_designs"
                    android:paddingLeft="25dp">

                    <EditText
                        android:id="@+id/remarks_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Teacher remarks"
                        android:background="@null"></EditText>


                </RelativeLayout>

                <Button
                    android:id="@+id/teacherdailydiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/teacherdashboard_diarybutton"
                    android:text="Submit"
                    android:textColor="@color/Textcolor" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
