<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacherdashboard_diarybutton"




    android:orientation="vertical"
    tools:context=".Splash">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cards"
            android:layout_margin="30dp"

            android:textSize="24sp"
            android:id="@+id/text"
            android:textAlignment="center"
            android:textStyle="bold"
            android:lineSpacingExtra="7dp"
            android:textColor="#ffffff"
            android:text="WELCOME \n AL QURAN EDUCATION SYSTEM "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_below="@+id/text"
            android:layout_marginTop="10dp"

            android:textColor="#ffffff"
            android:text="TUBA MOSQUE E-11  "/>



    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/cards"
        app:cardElevation="3dp"






        app:cardCornerRadius="70dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mono1"
            android:layout_margin="30dp"/>

    </android.support.v7.widget.CardView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/splash_img"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"


        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mo_re"

            android:text="@string/app_name"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="120dp"
            android:src="@drawable/mono" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/progress_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:text="55"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>

